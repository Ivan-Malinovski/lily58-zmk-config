#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// | ESC     | 1          | 2          | 3          | 4          | 5          |                         | 6          | 7          | 8          | 9          | 0          | -       |
// | `       | Q          | W          | E          | R          | T          |                         | Y          | U          | I          | O          | P          | =       |
// | TAB     | A          | S          | D          | F          | G          |                         | H          | J          | K          | L          | ;          | '       |
// | CTRL    | Z          | X          | C          | V          | B          | "["        | "]"        | N          | M          | ,          | .          | /          | \       |
//                                     | SHIFT      | GUI        | ALT        | SPACE      | ENTER      | BSPC       | LOWER      | SHIFT      |
            bindings = <
&kp ESC      &kp N1       &kp N2       &kp N3       &kp N4       &kp N5                                 &kp N6       &kp N7       &kp N8       &kp N9       &kp N0       &kp MINUS
&kp GRAVE    &kp Q        &kp W        &kp E        &kp R        &kp T                                  &kp Y        &kp U        &kp I        &kp O        &kp P        &kp EQUAL
&kp TAB      &kp A        &kp S        &kp D        &kp F        &kp G                                  &kp H        &kp J        &kp K        &kp L        &kp SEMI     &kp SQT
&kp LCTRL    &kp Z        &kp X        &kp C        &kp V        &kp B        &kp LBKT     &kp RBKT     &kp N        &kp M        &kp COMMA    &kp DOT      &kp FSLH     &kp BSLH
                                       &kp LSHFT    &kp LGUI     &kp LALT     &kp SPACE    &kp RET      &kp BSPC     &mo 1        &kp RSHFT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
// ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// | F1      | F2         | F3         | F4         | F5         | F6         |                         | F7         | F8         | F9         | F10        | F11        | F12     | 
// |         |            | ^          |            |            |            |                         |            |            |            | PG_UP      |            |         |
// |         | <-         | v          | ->         |            |            |                         |            |            | HOME       | PG_DN      | END        |         |
// |         |            |            |            |            |            | PSCRN      |            | INS        |            |            |            |            |         |
//                                     |            | RAISE      |            |            |            | DEL        | LOWER      |            |
            bindings = <
&kp F1       &kp F2       &kp F3       &kp F4       &kp F5       &kp F6                                 &kp F7       &kp F8       &kp F9       &kp F10      &kp F11      &kp F12
&none        &none        &kp UP       &none        &none        &none                                  &none        &none        &none        &kp PG_UP    &none        &none 
&none        &kp LEFT     &kp DOWN     &kp RIGHT    &none        &none                                  &none        &none        &kp HOME     &kp PG_DN    &kp END      &none 
&none        &none        &none        &none        &none        &none        &kp PSCRN    &none        &kp INS      &none        &none        &none        &none        &studio_unlock 
                                       &none        &mo 2        &none        &none        &none        &kp DEL      &mo 1        &none  

            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
// ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// | BTCLR   | BT1        | BT2        | BT3        | BT4        | BT5        |                         |            |            |            |            |            |         |
// | OUT_BLE | OUT_USB    |            |            |            |            |                         |            |            |            |            |            |         |
// |         |            |            |            |            |            |                         |            |            |            |            |            |         |
// |         |            |            |            |            |            |            |            |            |            |            |            |            |         |
//                                     |            | RAISE      |            |            |            |            | LOWER      |            |  
            bindings = <
&bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4                           &none        &none        &none        &none        &none        &none 
&out OUT_BLE &out OUT_USB &none        &none        &none        &none                                  &none        &none        &none        &none        &none        &none 
&none        &none        &none        &none        &none        &none                                  &none        &none        &none        &none        &none        &none 
&none        &none        &none        &none        &none        &none        &none        &none        &none        &none        &none        &none        &none        &none 
                                       &none        &mo 2        &none        &none        &none        &none        &mo 1        &none 

            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
